          label: '记住我',
          value: 1
        }],
      },
      data3: {
        values: [],
        options: [{
          label: '忘了我',
          value: 1
        }],
      },
      wrapperStyle: {
        width: '40px',
        height: '40px',
        borderRadius: 0,
      }
    },
    onInit() {
      this.$page.setTitleBar({ text: 'Checkbox' })
    },
    evtEmit() {
      // 父组件向指定子组件触发事件
      this.$vm('childVm').$broadcast('evtCast', { params: 1 })
    },
    callback(data) {
      this.value1 = [...data.detail.values]
    }
  }

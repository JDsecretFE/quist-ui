<script>
  export default {
    data: {
      value1: [],
      data1: {
        values: ['apple', 'banana'],
        options: [
          {
            disabled: true,
            label: '苹果',
            value: 'apple'
          },
          {
            disabled: false,
            label: '梨',
            value: 'pear'
          },
          {
